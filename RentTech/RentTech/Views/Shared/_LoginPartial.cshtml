@using Microsoft.AspNetCore.Identity
@using RentTech.Models.DomainModels
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="btn nav-link m-auto @(ViewBag.Current == "Admin" ? "active" : "")" asp-area="" asp-action="Index" asp-controller="Admin">Manage Users</a>
        </li>
        <li class="nav-item">
            <a class="btn nav-link m-auto" asp-area="" asp-action="Index" asp-controller="TechItems">Manage Items</a>
        </li>
        <li class="nav-item">
            <a class="btn nav-link m-auto" asp-area="" asp-action="Index" asp-controller="Reviews">Manage Reviews</a>
        </li>
        <li class="nav-item">
            <a class="btn nav-link m-auto" asp-area="" asp-action="Index" asp-controller="Tags">Manage Tags</a>
        </li>
    }
    @if (SignInManager.IsSignedIn(User))
    {
    // signed-in
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>

        <li class="nav-item">
            <form method="post" asp-action="LogOut" asp-controller="Account"
              asp-area="">
                <button type="submit"
                    class="btn btn-link nav-link m-auto">
                    Log Out
                </button>
            </form>
        </li>
    }
    else
    {
        // new/anon user
        <li class="nav-item">
            <a asp-action="Register" asp-controller="Account"
           asp-area="" class="btn nav-link m-auto @(ViewBag.Current == "Register" ? "active" : "")">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a asp-action="Login" asp-controller="Account"
           asp-area="" class="btn nav-link m-auto @(ViewBag.Current == "Login" ? "active" : "")">Log In</a>
        </li>
    }
</ul>
